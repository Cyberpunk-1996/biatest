pipeline {
    agent {
        docker {
            image 'python:3.9-slim'
            args '-u root --privileged'
            args 'sudo usermod -aG docker $USER'
         }
        } 
    stages {
        stage('Setup') {
            steps {
                sh "pip install -r requirements.txt --break-system-packages "
            }
        }
        stage('Test') {
            steps {
                sh "pytest"
                
            }
        }    
            
    }
}